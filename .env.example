# AI API Configuration (one required)
# Option 1: Claude API (recommended - cost-effective)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Option 2: OpenAI API (fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
# SQLite (default for development)
DATABASE_URL="file:./dev.db"

# PostgreSQL (for production/team development)
# DATABASE_URL="postgresql://admin:wfed119_dev_password@localhost:5432/wfed119"

# Docker Database Configuration
DB_USER=admin
DB_PASSWORD=wfed119_dev_password

# Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here_if_cloud

# Redis Configuration (for caching and queues)
REDIS_URL=redis://localhost:6379

# pgAdmin Configuration (optional - for database management)
PGADMIN_EMAIL=admin@wfed119.dev
PGADMIN_PASSWORD=admin

# Application Configuration
NODE_ENV=development
PORT=3000

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000 # 24 hours in milliseconds

# Security Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Monitoring & Analytics (optional)
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=your_ga_id_here
