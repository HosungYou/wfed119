# ===========================================
# SUPABASE CONFIGURATION (Required)
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===========================================
# AI API Configuration (at least one required)
# ===========================================

# Option 1: Claude API (recommended - cost-effective)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Option 2: OpenAI API (fallback)
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Database Configuration (Optional)
# ===========================================
# If using Supabase, the database is already configured
# Only needed for local PostgreSQL or SQLite

# SQLite (default for development)
# DATABASE_URL="file:./dev.db"

# PostgreSQL (local development)
# DATABASE_URL="postgresql://admin:wfed119_dev_password@localhost:5432/wfed119"

# Docker Database Configuration
DB_USER=admin
DB_PASSWORD=wfed119_dev_password

# ===========================================
# Vector Database Configuration (Optional)
# ===========================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here_if_cloud

# ===========================================
# Redis Configuration (Optional)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
PORT=3000

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000 # 24 hours in milliseconds

# ===========================================
# Monitoring & Analytics (Optional)
# ===========================================
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=your_ga_id_here
